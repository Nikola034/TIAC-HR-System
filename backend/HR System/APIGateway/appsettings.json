{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "JWT": {
    "Key": "someReallyL@rgeAndH@rdKeyForSigning!",
    "Audience": "SomeAudience",
    "Issuer": "SomeIssuer"
  },
  "ReverseProxy": {
    "Clusters": {
      "identity-cluster": {
        "Destinations": {
          "identity-service": {
            "Address": "http://identity-service:8081/"
          }
        }
      },
      "employee-cluster": {
        "Destinations": {
          "employee-service": {
            "Address": "http://employee-service:8082/"
          }
        }
      },
      "project-cluster": {
        "Destinations": {
          "project-service": {
            "Address": "http://project-service:8083/"
          }
        }
      }
    },
    "Routes": {
      "identity-routes": {
        "ClusterId": "identity-cluster",
        "Match": {
          "Path": "/api/auth/{**catch-all}"
        }
      },
      "employee-routes": {
        "ClusterId": "employee-cluster",
        "Match": {
          "Path": "/api/employees/{**catch-all}"
        }
      },
      "project-routes": {
        "ClusterId": "project-cluster",
        //"AuthorizationPolicy": "restricted-endpoint",
        "Match": {
          "Path": "/api/projects/{**catch-all}"
        }
      }
    }
  }
}